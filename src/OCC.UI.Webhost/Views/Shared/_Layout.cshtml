<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/css/Layout.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"> </script>
    </head>
    <body>
        <div class="container_12 siteContainer">
            <div id="header" class="grid_8">
                <h1>Orlando Code Camp 2012</h1>
                <img class="onetugTree" src="../../Content/themes/Metro/Images/OnetugTree.White.43x51.AlphaBackground.png" />
                <span style="float: left; margin-top: -5px;">March 31, 2012</span>
            </div>
            <div id="tilesColumnRight" >
                <div class="singleTileLeft tileBackgroundColor alpha">
                    @if (IsSectionDefined("HomeTile"))
                    {
                        @RenderSection("HomeTile", false)
                    }
                    else
                    {
                        <h6 class="labelLowerLeft">Home</h6>
                        <img class="singleTileIcon" src="../../Content/themes/Metro/WhiteIcons/48x48/flag.png" />
                    }
                </div>
                <div class="singleTileRight tileBackgroundColor omega">
                    @if (IsSectionDefined("RegisterTile"))
                    {
                        @RenderSection("RegisterTile", false)
                    }
                    else
                    {
                        <h6 class="labelLowerLeft">Login</h6>
                        <img class="singleTileIcon" src="../../Content/themes/Metro/WhiteIcons/48x48/flag.png" />
                    }
                </div>
                <div class="singleTileLeft tileBackgroundColor alpha">
                    @if (IsSectionDefined("HomeTile"))
                    {
                        @RenderSection("HomeTile", false)
                    }
                    else
                    {
                        <h6 class="labelLowerLeft">Agenda</h6>
                        <img class="singleTileIcon" src="../../Content/themes/Metro/WhiteIcons/48x48/flag.png" />
                    }
                </div>
                <div class="singleTileRight tileBackgroundColor omega">
                    @if (IsSectionDefined("VenueTile"))
                    {
                        @RenderSection("VenueTile", false)
                    }
                    else
                    {
                        <h6 class="labelLowerLeft">Venue</h6>
                        <img class="singleTileIcon" src="../../Content/themes/Metro/WhiteIcons/48x48/flag.png" />
                    }
                </div>
                <div class="doubleTile tileBackgroundColor">
                    @if (IsSectionDefined("TwitterFeed"))
                    {
                        @RenderSection("TwitterFeed", false)
                    }
                    else
                    {
                        <h6 class="labelLowerLeft">Twitter</h6>
                        <img class="singleTileIcon" src="../../Content/themes/Metro/WhiteIcons/48x48/flag.png" />
                    }
                </div>
            </div>
            <div class="grid_8" >
                @RenderBody()
            </div>
            <div>
            </div>
        </div>
    </body>
</html>